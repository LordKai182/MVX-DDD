@(Html

    .Grid(Model)
    .Build(columns =>
    {

        columns.Add(model => Html.CheckBox("Arquivo[]", false, new { @value = model.CenarioArquivoId+"|"+model.tipoArquivo, @onchange = "validar();" }));
        columns.Add(model => model.CenarioArquivoId.ToString().PadLeft(4, '0')).Titled("Código").Filterable(true);

        columns.Add(model => model.tipoArquivo).Titled("Tipo de Arquivo").WithFilterOptions(new[]
        {
             new SelectListItem(),
             new SelectListItem { Value = "BL", Text = "Boleto" },
             new SelectListItem { Value = "ISS", Text = "Nota Fiscal (ISS)" },
             new SelectListItem { Value = "ICMS_FORMULARIO", Text = "ICMS Formulario" },
             new SelectListItem { Value = "DEBITO", Text = "Débito" }
        });
        columns.Add(model => model.CenarioId).Titled("Cenario").Filterable(true);
        columns.Add(model => model.dataCriacao).Titled("Data de Criação").Filterable(true).Formatted("{0:d}");
        columns.Add(model => model.Prestacao).Titled("Prestação/Vencimento").Filterable(true);
        columns.Add(model => model.responsavel).Titled("Responsavel");
        columns.Add(model => model.Valor).Titled("Valor Documento").Formatted("{0:c}").Filterable(true);
        columns.Add(model => model.NumeroDocumento).Titled("Numero Documento").Filterable(true);
        //columns.Add(model => model.plano).Titled("Plano").Filterable(true);
        columns.Add(model => model.cnpjCpf).Titled("CNPJ/CPF").Filterable(true);
        columns.Add(model => model.cliente).Titled("Cliente").Filterable(true);
        columns.Add(model => model.RemessaLote).Titled("Remessa/Lote").Filterable(true);
        columns.Add(model => model.Observacao).Titled("Observação").Filterable(true);
        columns.Add(model => model.Vencimento).Titled("Vencimento").WithFilterOptions(new SelectList(Model.Select(x => x.Vencimento).Distinct()));
    })
      .WithFooter("Footer")
      .WithFilterMode(GridFilterMode.FilterRow)
      .Filterable()
      .Sortable()
       .Css("tabela") // Overwrites all classes with the new ones
        .AppendCss("table-hover") // Appends classes to the current ones
      .Pageable(pager =>
      {
          pager.PageSizes = new Dictionary<Int32, String> { { 0, "Todos" }, { 10, "10" }, { 30, "30" }, { 50, "50" } };
          pager.ShowPageSizes = true;
          pager.PagesToDisplay = 5;
          pager.CurrentPage = 1;
          pager.RowsPerPage = 10;
      })

)
