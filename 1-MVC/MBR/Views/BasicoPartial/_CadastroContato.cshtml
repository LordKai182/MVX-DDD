@using Infra;
@using Infra.Entidades;
@using Utils;
@{
    var db = new Class1(true);

    var _contrato = (Contrato)Session["_Contrato"];
}
@using (@Html.BeginForm("_PartialContatos", "Contrato", FormMethod.Post, new { @id = "formContato", @name = "formContato" }))
{
    <input type="hidden" name="ClienteId" id="Clienteid" value="@_contrato.ClienteId" />
    <input type="hidden" name="ContratoId" id="ContratoId" value="@_contrato.ContratoId" />
    <div class="form-group row">
        <label class="col-sm-1 col-form-label">Nome</label>
        <div class="col-sm-3">
            <input type="text" required class="form-control" id="Nome" name="Nome" placeholder="Nome ">
        </div>
        <label class="col-sm-1 col-form-label">Funcionario Cargo </label>

        <div class="col-sm-2">
            <select class="form-control" id="FuncionarioCargo" name="FuncionarioCargo">
                @foreach (var item in db.FuncionarioCargo)
                    {
                        <option value="@item.FuncionarioCargoNome">@item.FuncionarioCargoNome</option>
                    }

            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label">Telefone Fixo</label>
        <div class="col-sm-3">
            <input type="text" required class="form-control" id="TelefoneFixo" onkeypress="Campo('#TelefoneFixo','(99)9999-9999')" name="TelefoneFixo" placeholder="Telefone Fixo">
        </div>

        <label class="col-sm-1 col-form-label">Email</label>
        <div class="col-sm-2">
            <input type="text" required class="form-control" id="Email" name="Email" placeholder="Email">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label">Observacao</label>
        <div class="col-sm-3">
            <input type="text" required class="form-control" id="Observacao" name="Observacao" placeholder="Observacao">
        </div>

    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-1 col-form-label">Aviso Cobranca?</label>
        <div class="col-sm-10">
            <div class="form-check">
                <label class="form-check-label">
                    <select class="form-control" id="AvisoCobranca" name="AvisoCobranca">
                        <option value="true">Sim</option>
                        <option value="false">Nao</option>
                    </select>
                </label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success " style="margin-left:15px">
                <span class="glyphicon glyphicon-floppy-save"></span> Salvar Contato
            </button>
        </div>
    </div>
}
