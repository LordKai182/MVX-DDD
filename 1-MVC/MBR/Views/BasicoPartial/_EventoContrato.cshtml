</style>
@{
    string valores = string.Empty;
}
<div class="form-row">

    @using (Html.BeginForm("EventosContrato", "Contrato", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <nav class="navbar navbar-default eventocontra" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <select name="EventosContrato" id="EventosContrato" class="selectpicker" multiple data-live-search="true" data-live-search-placeholder="Buscar" data-actions-box="true">
                                <optgroup label="Eventos de Contrato">
                                    <option value="1">Alterar Vencimento</option>
                                    <option value="2">Upgrade/Downgrade de Receita</option>
                                    <option value="3">Upgrade/Downgrade de Serviço</option>
                                    <option value="4">Renovação</option>
                                    <option value="5">Substituição</option>
                                </optgroup>
                            </select>
                        </div>

                    </form>

                </div>
                <button type="submit" class="btn btn-primary" style="margin-top:-20px; margin-left:20px;">Processar Evento</button>
                <!-- .container-fluid -->
            </div>
        </nav>


    }
    <button type="button" class="btn btn-primary "  data-toggle="modal" data-target="#exampleModal" style="margin-left:5px;height:40px;margin-top:5px;">
        Criar Grupo
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="width:700px;">
                <div class="modal-header panel-heading" style="background-color:steelblue">
                    <h5 class="modal-title" id="exampleModalLabel" style="color:white">Grupos de Contratos</h5>
                    <button type="button" class="close " data-dismiss="modal" aria-label="Close" style="color:red">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input type="hidden" name="ContratosGrupo" id="ContratosGrupo" />
                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal", @id = "formGrupo", @name = "formGrupo" }))
                {
                    <div id="conteudoGrupo"></div>
                    //{ Html.RenderAction("CriarGrupo"); }

                    <div class="modal-footer panel-heading" style="background-color:steelblue">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary">Iniciar Contrato</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
